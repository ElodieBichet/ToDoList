{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">
{% endblock %}

{% block body %}
	<div class="row">
		<a href="{{ path('task_create') }}" class="btn btn-info pull-right">Créer une tâche</a>
	</div>
	<div class="row">
		{% if tasks|length == 0 %}
			<div class="alert alert-warning" role="alert">
				Il n'y a pas encore de tâche enregistrée.
			</div>
		{% endif %}
		{% for task in tasks %}
			<div class="col-sm-4 col-lg-4 col-md-4">
				<div class="thumbnail">
					<div class="caption">
						<h4 class="pull-right">
							{% if task.isDone %}
								<span class="glyphicon glyphicon-ok"></span>
							{% else %}
								<span class="glyphicon glyphicon-remove"></span>
							{% endif %}
						</h4>
						<h4>
							{% if is_granted('TASK_EDIT', task) %}
								<a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a>
							{% else %}
								{{ task.title }}
							{% endif %}
							<span class="small">
								<span class="glyphicon glyphicon-user"></span>
								{% if not task.author %}Anonyme
								{% else %}
									{{ task.author.username }}
								{% endif %}
							</span>
						</h4>
						<p>{{ task.content }}</p>
					</div>
					<div>
						{% if is_granted('TASK_TOGGLE', task) %}
							<form action="{{ path('task_toggle', {'id' : task.id }) }}">
								<button class="btn btn-success btn-sm pull-right">
									{% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée
									{% endif %}
								</button>
							</form>
						{% endif %}
						{% if is_granted('TASK_DELETE', task) %}
							<form action="{{ path('task_delete', {'id' : task.id }) }}">
								<button class="btn btn-danger btn-sm pull-right">Supprimer</button>
							</form>
						{% endif %}
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}

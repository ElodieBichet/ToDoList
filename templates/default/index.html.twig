{% extends 'base.html.twig' %}

{% block header_title %}
	<h1>Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
{% endblock %}

{% block body %}{% endblock %}

{% block header_img %}
	<div class="position-relative">
		{{ parent() }}
		<div class="position-absolute top-50 start-50 translate-middle text-center">
			<a href="{{ path('task_create') }}" class="btn btn-success m-1">
				<i class="bi bi-journal-plus"></i>
				Créer une nouvelle tâche</a>
			<a href="{{ path('task_list') }}" class="btn btn-info m-1">
				<i class="bi bi-journals"></i>
				Consulter la liste des tâches</a>
		</div>
	</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block header_title %}
	{% if is_granted('ROLE_ADMIN') %}
		<h1>Cr√©er un utilisateur</h1>
	{% else %}
		<h1>S'enregistrer</h1>
	{% endif %}
{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
	<div class="row">
		{{ form_start(form, {'action' : path('user_create')}) }}
		{{ form_row(form.username, {'row_attr': {'class': 'mb-2'}}) }}
		{{ form_row(form.password) }}
		{{ form_row(form.email, {'row_attr': {'class': 'mb-2'}}) }}
		{% if not is_granted('ROLE_ADMIN') %}
			{% do form.admin.setRendered() %}
		{% endif %}
		<button type="submit" class="btn btn-success float-end">Ajouter</button>
		{{ form_end(form) }}
	</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block header_img %}{% endblock %}

{% block header_title %}
	<h1>Liste des utilisateurs</h1>
{% endblock %}

{% block body %}
	{% if users|length == 0 %}
		<div class="alert alert-warning my-2" role="alert">
			Il n'y a pas encore d'utilisateur enregistré.
			<a href="{{ path('user_create') }}" class="btn btn-warning float-end">
				<i class="bi bi-person-plus-fill"></i>
				Créer un utilisateur</a>
		</div>
	{% else %}
		<div class="row">
			<div class="d-flex justify-content-end">
				<a href="{{ path('user_create') }}" class="btn btn-info">
					<i class="bi bi-person-plus-fill"></i>
					Créer un utilisateur</a>
			</div>
			<table class="table">
				<thead>
					<tr>
						<th>#</th>
						<th>Nom d'utilisateur</th>
						<th>Admin</th>
						<th>Adresse d'utilisateur</th>
						<th>Nb de tâches</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<th scope="row">{{ loop.index }}</th>
							<td>{{ user.username }}</td>
							<td>
								{% if "ROLE_ADMIN" in user.roles %}
									<i class="bi bi-check-lg text-success text-center"></i>
								{% endif %}
							</td>
							<td>{{ user.email }}</td>
							<td>{{ user.tasks.count }}
							</td>
							<td>
								<a href="{{ path('user_edit', {'id' : user.id}) }}" class="btn btn-secondary btn-sm">Editer
									<i class="bi bi-pencil-square"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	{% endif %}
{% endblock %}
